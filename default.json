{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
    "regexManagers:gitlabPipelineVersions",
    "regexManagers:tfvarsVersions"
  ],
  "customDatasources": {
    "apt.debian": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/apt-repositories/debian/main/apt/{{packageName}}.json",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $$.version }], \"homepage\": $$.homepage }"
      ],
      "versioning": "apt"
    },
    "apt.ubuntu": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/apt-repositories/ubuntu/main/apt/{{packageName}}.json",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $$.version }], \"homepage\": $$.homepage }"
      ],
      "versioning": "apt"
    }
  },

  "branchConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Disable unsafe pinning attempts.",
      "enabled": false,
      "matchDatasources": ["docker"],
      "matchManagers": ["regex"],
      "matchUpdateTypes": ["digest", "pinDigest"]
    },
    {
      "matchPackagePatterns": ["^actions/", "^aws-actions/", "^github/*"],
      "matchUpdateTypes": "digest",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["docker.io/library/node", "node"],
      "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-.*)?$",
      "versioning": "node",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": ["python/cpython"],
      "extractVersion": "^v(?<version>.*)$"
    }
  ],
  "pinDigests": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 5
}
