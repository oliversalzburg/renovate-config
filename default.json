{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
    "regexManagers:gitlabPipelineVersions",
    "regexManagers:tfvarsVersions"
  ],

  "branchConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["^actions/", "^aws-actions/", "^github/*"],
      "matchUpdateTypes": "digest",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["^convict", "^@types/convict"],
      "groupName": "convict"
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["i18next"],
      "groupName": "i18next"
    },
    {
      "matchPackagePatterns": ["^lit$", "^lit-"],
      "groupName": "lit"
    },
    {
      "matchPackagePatterns": ["prettier"],
      "groupName": "prettier"
    },
    {
      "matchPackagePatterns": ["^@yarnpkg/"],
      "groupName": "yarn"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["docker.io/library/node", "node"],
      "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-.*)?$",
      "versioning": "node",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": ["python/cpython"],
      "extractVersion": "^v(?<version>.*)$"
    },
    {
      "matchManagers": ["regex"],
      "pinDigests": false
    }
  ],
  "pinDigests": true,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 5
}
